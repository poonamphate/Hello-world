public class HouseRobber {
	public static void main(String []args) {
	      
	      int[] arr = {2, 1, 1, 2};
	      System.out.println(maxSum(arr)); 
	   }
	   
	  static int maxSum(int arr[]) {
	        int excl = 0;
	        int incl = arr[0];
	        for (int i = 1; i < arr.length; i++) {
	            int temp = incl;
	            incl = Math.max(excl + arr[i], incl);
	            excl = temp;
	        }
	        return incl;
	    }
}
